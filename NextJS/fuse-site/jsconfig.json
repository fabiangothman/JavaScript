{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~api": [
        "./api/"
      ],
      "~hooks/*": [
        "./hooks/*"
      ],
      "~baseComponents/*": [
        "./components/base/*"
      ],
      "~layouts/*": [
        "./components/layouts/*"
      ],
      "~sections/*": [
        "./components/sections/*"
      ],
      "~contexts/*": [
        "./contexts/*"
      ],
      "~styles/*": [
        "./styles/*"
      ],
      "~grid": [
        "./components/grid"
      ],
      "~assets/*": [
        "./assets/*"
      ],
      "~shared": [
        "./shared/index.js"
      ]
    }
  },
}